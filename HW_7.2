strings_positions = {} # создание справочника

def custom_write (file_name, strings):

    file = open (file_name, 'a', encoding ='utf-8')
    cursor = 0  # определение переменной с позицией курсора
    number_string: int = 0  # определение переменной - счетчика строк
    for i in strings:
        cursor = file.tell()
        file.write(f'{i}\n')
        number_string += 1
        strings_positions.update({(number_string, cursor): i})

    file.close()
    return strings_positions

if __name__ == '__main__':
    info = [
        'Text for tell.',
        'Используйте кодировку utf-8.',
        'Because there are 2 languages!',
        'Спасибо!']
    custom_write('file_name.txt',info)
