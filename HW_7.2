strings_positions = {} # создание справочника
cursor = 0 # создание переменной с позицией курсора
number_string: int = 0 # создание переменной - счетчика строк
def custom_write (file_name, strings):
    file_name = 'file_name.txt'
    file = open (file_name, 'a', encoding ='utf-8')
    for i in strings:
        cursor = file.tell()
        file.write(f'{i}\n')
        number_string = + 1
        strings_positions.update({(number_string, cursor): i})
    file.close()

if __name__ == '__main__':
    info = [
        'Text for tell.',
        'Используйте кодировку utf-8.',
