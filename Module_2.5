#Функции в Python.Функция с параметром
def get_matrix (m, n, value):
    result = (m * [[value]* n])
    return result
result = get_matrix (2, 2, 10)
print (result)
result = get_matrix (3, 5, 42)
print (result)
result = get_matrix (4, 2, 13)
print (result)
result = get_matrix (-4, 2, 13)
print (result)
