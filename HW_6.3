class Horse:
    x_distance = 0
    sound = 'Frrr'

    def run (self,dx):
        self.x_distance += dx
        return self.x_distance

class Eagle:
    y_distance = 0
    sound = 'I train, eat, sleep, and repeat'

    def fly (self, dy):
        self.y_distance += dy
        return self.y_distance

class Pegasus (Horse, Eagle):

    def move (self, dx, dy):
        super().run (dx)
        super().fly (dy)

    def get_pos(self):
        return self.x_distance, self.y_distance

    def voice (self):
        self.sound = Eagle.sound
        print (self.sound)

